# Screenshots
bindsym Shift+Print exec --no-startup-id flameshot gui --clipboard
bindsym Print exec --no-startup-id flameshot full --clipboard
bindsym $mod+Print exec --no-startup-id flameshot full -p ~/Pictures/Screenshot
